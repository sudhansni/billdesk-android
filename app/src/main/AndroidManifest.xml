<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    package="com.billdesk.app.billdesk">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".BillDeskApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        tools:replace="android:supportsRtl, android:icon"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.RegistrationActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".activities.OTPActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.ProfileDetailsActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".activities.CardsActivity"
            android:screenOrientation="portrait">
            <!-- Enables google to index the app and provides deep linking -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:host="www.billdesk.com.au"
                    android:scheme="http"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


    </application>

</manifest>
