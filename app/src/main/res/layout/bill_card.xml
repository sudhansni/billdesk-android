<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_card_min_height"
    android:layout_gravity="top"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/accent_bar"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textview_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/accent_bar"
            android:background="@color/provider_background"
            android:ellipsize="marquee"
            android:padding="@dimen/padding_small"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_medium"
            tools:text="Telstra Corporation" />


        <TextView
            android:id="@+id/textview_card_due_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_card_title"
            android:layout_toEndOf="@id/accent_bar"
            android:ellipsize="marquee"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:singleLine="true"
            android:textColor="@color/sub_title_color"
            android:textSize="@dimen/text_size_small"
            android:text="Due On" />

        <TextView
            android:id="@+id/textview_card_due_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_card_due_title"
            android:layout_toEndOf="@id/accent_bar"
            android:ellipsize="marquee"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            tools:text="27-June-2017" />

        <TextView
            android:id="@+id/textview_card_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textview_card_title"
            android:ellipsize="marquee"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:singleLine="true"
            android:textColor="@color/sub_title_color"
            android:textSize="@dimen/text_size_small"
            android:text="Amount" />

        <TextView
            android:id="@+id/textview_card_amount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textview_card_amount_title"
            android:ellipsize="marquee"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            tools:text="$300" />

        <TextView
            android:id="@+id/textview_card_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_card_due_value"
            android:layout_toEndOf="@id/accent_bar"
            android:ellipsize="marquee"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small"
            android:singleLine="true"
            android:textColor="@color/sub_title_color"
            android:textSize="@dimen/text_size_small"
            android:text="Status" />

        <TextView
            android:id="@+id/textview_card_status_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_card_status_title"
            android:layout_toEndOf="@id/accent_bar"
            android:ellipsize="marquee"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            tools:text="Over Due" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
