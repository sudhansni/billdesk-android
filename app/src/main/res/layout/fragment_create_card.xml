<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE4E5"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp">

    <com.kofigyan.stateprogressbar.StateProgressBar
        android:id="@+id/your_state_progress_bar_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        app:spb_animateToCurrentProgressState="true"
        app:spb_checkStateCompleted="false"
        app:spb_currentStateDescriptionColor="#ff00ff"
        app:spb_currentStateNumber="one"
        app:spb_maxStateNumber="three"
        app:spb_stateBackgroundColor="#dfe4e5"
        app:spb_stateDescriptionColor="#00ffff"
        app:spb_stateForegroundColor="#1c75af"
        app:spb_stateNumberBackgroundColor="@android:color/black"
        app:spb_stateNumberForegroundColor="@android:color/white"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/create_card_placeholder"/>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_cards"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/card_view_shortcut"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_settings_black_24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/settings_shortcut"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_action_add_card"
            android:layout_marginLeft="16dp"
            android:id="@+id/create_card_shortcut"
            app:layout_constraintLeft_toRightOf="@id/card_view_shortcut"
            app:layout_constraintRight_toLeftOf="@id/settings_shortcut"/>






    </android.support.constraint.ConstraintLayout>


</LinearLayout>


